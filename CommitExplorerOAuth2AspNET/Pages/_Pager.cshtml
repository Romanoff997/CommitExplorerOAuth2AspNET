@model CommitExplorerOAuth2AspNET.Models.Pager.Pager

<div class="container">

    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="Manager" asp-action="Page">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Manager" asp-action="Pager" asp-route-pg="@(Model.CurrentPage-1)">Previous</a>
                </li>

            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge ==Model.CurrentPage ? "active": "")">
                    <a class="page-link" asp-controller="Manager" asp-action="Pager" asp-route-pg="@pge">@pge</a>
                </li>

            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Manager" asp-action="Pager" asp-route-pg="@(Model.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Manager" asp-action="Pager" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>

            }
        </ul>
    }
</div>